<% if obj.errors.any? %>
  <div class="flash-messages">
    <div class="flash flash--error">
      <h4>
        <%= t(".general", item: obj.class.name.downcase) %>
      </h4>
      
      <ul>
        <% obj.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>
